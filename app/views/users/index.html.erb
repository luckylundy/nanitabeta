<div class="container">
  <h1 class="text-center">ユーザー一覧</h1>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-6 card">
        <div class="card-body">
          <% if user.portrait? %>
            <%= link_to user do %>
              <%= image_tag user.portrait.to_s, size: "120x120" %>
            <% end %>
          <% else %>
            <%= link_to user do %>
              <%= image_tag "default.jpeg", size: "120x120" %>
            <% end %>
          <% end %>
          <p><%=link_to user.name, user %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="pagination mt-3">
    <%= paginate @users %>
  </div>
</div>