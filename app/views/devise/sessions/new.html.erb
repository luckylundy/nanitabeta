<div class="col-sm-6 mx-auto mt-5">
  <h2 class="text-center">ログインページ</h2>

  <%= form_with(model: @user, url: session_path(resource_name), local: true) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email, "Eメール", class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード", class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group form-check text-center">
        <%= f.check_box :remember_me, class: "form-check-input position-relative" %>
        <%= f.label :remember_me, "ログインしたままにする", class: "form-check-label" %>
      </div>
    <% end %>

    <div class="actions text-center">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="small text-center text-muted mt-4">
      新しいユーザーの方ですか？
    </div>
    <div class="text-center">
      <%= link_to "新規登録をする", new_registration_path(resource_name), class: "btn btn-light border mt-1" %>
    </div>
  <% end %>
</div>
